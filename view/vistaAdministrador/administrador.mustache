    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/public/js/tiempoSelect.js"></script>
<script>

    $(document).ready(function() {
        $('#btn_jugadores').click(function() {
            $('.estadisticas-section').hide();
            $('#btn-preguntas').show();
            $('#cantidad_jugadores').show();
        });

        $('#btn_partidasJug').click(function() {
            $('.estadisticas-section').hide();
            $('#btn-partidas').show();
            $('#btn_partidas').show();
        });
        $('#btn_usuarios_nuevos').click(function() {
            $('.estadisticas-section').hide();
            $('#btn-user-new').show();
            $('#cantidad-usuarios-nuevos').show();
        });

        $('#btn_preguntas_juegO').click(function() {
            $('.estadisticas-section').hide();
          //  $('#btn-user-new').show();
            $('#btn_preguntas_juego').show();
        });

        $('#btn_preguntas_creadas').click(function() {
            $('.estadisticas-section').hide();
            $('#btn-preguntas').show();
            $('#btn_preguntas-creadas').show();
        });

        $('#btn_usuarios_pais').click(function() {
            $('.estadisticas-section').hide();
            $('#cantidad-usuarios-pais').show();
            $('#btn-pais').show();
        });

        $('#btn_usuarios_sexo').click(function() {
            $('.estadisticas-section').hide();
            $('#cantidad-usuarios-sexo').show();
            $('#btn-graficosex').show();
        });
        $('#btn_usuarios_edad').click(function() {
            $('.estadisticas-section').hide();
            $('#cantidad-usuarios-edad').show();
            $('#btn-edad').show();
        });
        $('#btn_usuarios_edad').click(function() {
            $('.estadisticas-section').hide();
            $('#cantidad-usuarios-edad').show();
            $('#btn-edad').show();
        });
    });
</script>