<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            Perfil de Usuario
        </div>
        {{#usuario}}
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <div class="w-full md:w-1/3 flex justify-center">
                        <img src="/{{foto}}" alt="Foto de perfil"
                             class="w-40 h-40 rounded-full border border-[2px] border-gray-700 shadow-lg">
                    </div>
                </div>
                <div class="col-md-9">
                    <p class="card-text"><strong>Nombre de usuario:</strong> {{username}}</p>
                    <p class="card-text"><strong>Año de nacimiento:</strong> {{anio_nacimiento}}</p>
                    <p class="card-text"><strong>País:</strong> {{nombre_pais}}</p>
                    <p class="card-text"><strong>Ciudad:</strong> {{ciudad}}</p>
                </div>
                {{/usuario}}
            </div>
        </div>
    </div>
</div>
